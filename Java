      function displayRandomMessage(messages) {
        var randomIndex = Math.floor(Math.random() * messages.length);
        var selectedMessage = messages[randomIndex];
        var messageElement = document.getElementById("message");
       
        messageElement.textContent = selectedMessage;
    var messageContainer = document.getElementById("message-container");
    messageContainer.style.display = "block";
  }
  function displayRandomMessage(messages) {
  var messageContainer = document.getElementById("message-container");
  var messageElement = document.getElementById("message");
  var randomIndex = Math.floor(Math.random() * messages.length);
  var selectedMessage = messages[randomIndex];
  
  // Check if the selected message is already displayed
  if (messageElement.textContent === selectedMessage) {
    // If yes, call the function again to display a different message
    displayRandomMessage(messages);
    return;
  }

  messageElement.textContent = selectedMessage;
  messageContainer.style.display = "block";
}


  function closePopup() {
    var messageContainer = document.getElementById("message-container");
    messageContainer.style.display = "none";
  }
